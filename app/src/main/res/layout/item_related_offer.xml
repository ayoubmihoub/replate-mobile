<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/offer_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_grey_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        android:contentDescription="Image de l'offre"/>

    <TextView
        android:id="@+id/tv_offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/offer_profile_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_offer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Individual"
        android:textSize="14sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="@id/tv_offer_name"
        app:layout_constraintTop_toBottomOf="@id/tv_offer_name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_offer_name"
        app:layout_constraintTop_toBottomOf="@id/tv_offer_type">

        <Button
            android:id="@+id/btn_dismiss_offer"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Dismiss"
            android:textSize="12sp"
            android:textColor="#808080"
            android:backgroundTint="#F0F0F0"
            app:cornerRadius="8dp"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_approve_offer"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Approve"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFC107"
            app:cornerRadius="8dp"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>