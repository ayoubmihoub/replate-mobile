<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".NewAnnouncementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/resource_return"
            android:background="@drawable/rounded_button_bg"  app:backgroundTint="#F5F5F5"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New announcement"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toStartOf="@id/btn_menu_header"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btn_menu_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/hum"
            android:padding="8dp"
            app:cornerRadius="16dp"  app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:contentDescription="Menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_add_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic_path"
                        android:tint="@color/black"
                        android:contentDescription="Add new photo"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add new Photo"
                        android:textSize="14sp"
                        android:textColor="#808080"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food title *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/input_food_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter your food title"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#A9A9A9"
                android:layout_marginBottom="24dp"
                android:inputType="textCapWords"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food category *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_food_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/rounded_edittext_bg"
                android:entries="@array/food_categories"  android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:popupBackground="@android:color/white"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginBottom="24dp"
                android:minHeight="50dp">

                <EditText
                    android:id="@+id/input_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Enter your quantity"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#A9A9A9"
                    android:inputType="numberDecimal"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp"/>

                <Spinner
                    android:id="@+id/spinner_weight_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/weight_units"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edit_text_expiration_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="20/05/2025"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#A9A9A9"
                android:drawableEnd="@drawable/calendar"  android:drawablePadding="8dp"
                android:focusable="false"  android:clickable="true"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact number *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginBottom="24dp"
                android:minHeight="50dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/tn"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Tunisia Flag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(216)"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/input_contact_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="24785682"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#A9A9A9"
                    android:inputType="phone"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Adress *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/input_pickup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter your pickup adress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#A9A9A9"
                android:drawableEnd="@drawable/location_link"  android:drawablePadding="8dp"
                android:layout_marginBottom="24dp"
                android:inputType="textPostalAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Type *"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginBottom="24dp"
                android:minHeight="50dp"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Free"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="16dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/free"
                    android:tint="#A9A9A9"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Info"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@android:color/black"
            android:backgroundTint="#F5F5F5"
            app:cornerRadius="12dp"
            android:minHeight="50dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Publish"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFC107"
            app:cornerRadius="12dp"
            android:minHeight="50dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>