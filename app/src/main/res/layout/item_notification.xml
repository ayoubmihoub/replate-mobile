<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/icon_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#D3D3D3"
        tools:src="@tools:sample/avatars"
        android:contentDescription="Icône de notification ou avatar"/>

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#A9A9A9"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/icon_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8 hours ago • Announcement offer" />

    <TextView
        android:id="@+id/tv_notification_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_notification_time"
        app:layout_constraintEnd_toStartOf="@id/image_right"
        app:layout_constraintTop_toBottomOf="@id/tv_notification_time"
        tools:text="You've received a new offer from Ahmed Amine for announcement AN-001." />

    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_notification_time"
        app:layout_constraintTop_toBottomOf="@id/tv_notification_message">

        <TextView
            android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:textSize="14sp"
            android:textColor="#A9A9A9"
            android:textStyle="bold"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/btn_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_yellow_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        android:contentDescription="Aperçu de l'image de l'annonce"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_actions"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>