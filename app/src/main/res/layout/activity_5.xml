<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".Activity5">

    <View
        android:id="@+id/logo_placeholder"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replate"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logo_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/stepper_include"
        layout="@layout/stepper_layout_step_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/selection_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/stepper_include"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_individual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Individual"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFC107"
            android:textStyle="bold"
            android:drawableStart="@drawable/individual" android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginEnd="6dp"
            app:cornerRadius="8dp" /> <Button
        android:id="@+id/btn_merchant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Merchant"
        android:textColor="#808080"
        android:backgroundTint="#F5F5F5"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btn_association"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Association"
            android:textColor="#808080"
            android:backgroundTint="#F5F5F5"
            android:drawableStart="@drawable/association"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="6dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/label_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/selection_buttons_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input_background"
        android:hint="Enter your city or address"
        android:textColorHint="#A9A9A9"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/location"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/location_link"
        android:inputType="textPostalAddress"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_location" />

    <TextView
        android:id="@+id/label_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Picture"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_location"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input_background"
        android:hint="Upload a profile picture"
        android:textColorHint="#A9A9A9"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/fuul_name_placeholder"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/pic_link"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_profile_picture" />

    <LinearLayout
        android:id="@+id/navigation_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/input_profile_picture"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="#FF8C00"
            android:backgroundTint="#FBE5D6"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btn_next_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF8C00"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>