<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/donation_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/saved_food"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Image du don"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/donation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Pain frais et pÃ¢tisseries"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/donation_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/donation_price" />

        <TextView
            android:id="@+id/donation_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Boulangerie Le Bon Pain - 1.2 km"
            android:textSize="14sp"
            android:textColor="#808080"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/donation_image"
            app:layout_constraintTop_toBottomOf="@id/donation_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/donation_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRATUIT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#00AA00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>