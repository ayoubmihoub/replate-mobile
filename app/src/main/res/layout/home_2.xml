<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".Home2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Header avec profil et menu -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp">

                    <View
                        android:id="@+id/profile_placeholder"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/profile_placeholder"
                        app:layout_constraintTop_toTopOf="@id/profile_placeholder"
                        app:layout_constraintBottom_toBottomOf="@id/profile_placeholder">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Location"
                            android:textSize="12sp"
                            android:textColor="#A9A9A9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunisia, Ariana 1027"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:drawableStart="@drawable/location"
                            android:drawablePadding="4dp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@android:color/white"
                        android:src="@drawable/hum"
                        android:padding="8dp"
                        app:cornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitCenter"
                        android:contentDescription="Menu" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Barre de recherche -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/input_search"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:hint="Search ..."
                        android:textColorHint="#A9A9A9"
                        android:paddingStart="16dp"
                        android:paddingEnd="50dp"
                        android:drawableStart="@drawable/search"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tri"
                        android:contentDescription="Filter"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintEnd_toEndOf="@id/input_search"
                        app:layout_constraintTop_toTopOf="@id/input_search"
                        app:layout_constraintBottom_toBottomOf="@id/input_search" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Card Saved Food -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFEEE8"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.5 Kg"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#FF4500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saved food waste"
                            android:textSize="16sp"
                            android:textColor="#FF4500" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Categories -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse by category"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_category_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All types"
                            android:textColor="@android:color/black"
                            android:backgroundTint="#FFC107"
                            android:drawableStart="@drawable/all_types"
                            android:drawablePadding="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="20dp" />

                        <Button
                            android:id="@+id/btn_category_baked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baked goods"
                            android:textColor="#808080"
                            android:backgroundTint="@android:color/white"
                            android:drawableStart="@drawable/baked"
                            android:drawablePadding="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Available Donations -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available donations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="24dp">

                    <FrameLayout
                        android:id="@+id/donation_card_free"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/donation_card_free"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/donation_card_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/donation_card_sale"/>
                    </FrameLayout>

                </LinearLayout>

                <!-- Nearby Donations -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby donations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <FrameLayout
                        android:id="@+id/donation_card_nearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/donation_card_nearby"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/donation_card_nearby_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/donation_card_nearby_2"/>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="8dp"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout style="@style/BottomNavTabInactive" android:id="@+id/nav_home_tab">
                <ImageView style="@style/BottomNavIconInactive" android:src="@drawable/home" android:contentDescription="Home"/>
                <TextView style="@style/BottomNavTextInactive" android:text="Home" />
            </LinearLayout>

            <LinearLayout style="@style/BottomNavTabInactive" android:id="@+id/nav_explore_tab">
                <ImageView style="@style/BottomNavIconInactive" android:src="@drawable/global_search" android:contentDescription="Explore"/>
                <TextView style="@style/BottomNavTextInactive" android:text="Explore" />
            </LinearLayout>

            <LinearLayout style="@style/BottomNavTabActive" android:id="@+id/nav_pub_tab">
                <ImageView style="@style/BottomNavIconActive" android:src="@drawable/contour" android:contentDescription="Publish"/>
                <TextView style="@style/BottomNavTextActive" android:text="pub" />
            </LinearLayout>

            <LinearLayout style="@style/BottomNavTabInactive" android:id="@+id/nav_offers_tab">
                <ImageView style="@style/BottomNavIconInactive" android:src="@drawable/notification" android:contentDescription="Offers"/>
                <TextView style="@style/BottomNavTextInactive" android:text="Offers" />
            </LinearLayout>

            <LinearLayout
                style="@style/BottomNavTabInactive"
                android:id="@+id/nav_profile_tab">
                <ImageView style="@style/BottomNavIconInactive" android:src="@drawable/account" android:contentDescription="Profile"/>
                <TextView style="@style/BottomNavTextInactive" android:text="Profile" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:background="@android:color/white" />

</androidx.drawerlayout.widget.DrawerLayout>
