<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/map_illustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/map"
        android:contentDescription="Map illustration with location pin"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/button_access_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/button_access_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Location"
        android:textColor="@android:color/black"
        android:backgroundTint="#FFC107"
        android:textStyle="bold"
        android:minHeight="50dp"
        android:layout_marginTop="64dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/map_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Allow location access to find nearby food donations and pickup points."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#606060"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_access_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>